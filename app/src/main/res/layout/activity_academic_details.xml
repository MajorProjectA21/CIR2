<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_li82"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AcademicDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Percentage:"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AcademicPercentageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextrectangle"
                android:textColor="#000102"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Year Of Passing:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/AcademicYearOFPassing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Board OF Examinations:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/AcademicBoardOfExaminationEditTExt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#80000000"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Higher Secondary"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Percentage:"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AcademicHSPercentageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextrectangle"
                android:textColor="#000102"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Year Of Passing:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/AcademicHSYearOFPassing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Board OF Examinations:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/AcademicHSBoardOfExaminationEditTExt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#80000000"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graduation"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="semester 1"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="25dp">

                <TextView
                    android:id="@+id/AcademicSem1CgpaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGPA:"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/AcademicSem1Cgpa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextrectangle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp">

                <TextView
                    android:id="@+id/AcademicDOPTExtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Of Passing:"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/AcademicSem1DOPCgpa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextrectangle" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"

            >

            <Button
                android:layout_width="145sp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapelogin"
                android:onClick="updateButtonEvent"
                android:text="Update" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/shapesignup"
                android:onClick="saveButtonEvent"
                android:text="Save"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"

            >

            <Button
                android:layout_width="145sp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapelogin"
                android:onClick="updateButtonEvent"
                android:text="Academic Details" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>