<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_li82"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileNavActivity">
    <!--tools:showIn="@layout/activity_profile_nav">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="#80000000"
        android:orientation="vertical"
        android:paddingLeft="25sp"
        android:paddingTop="56sp"
        android:paddingRight="25sp"
        android:paddingBottom="25sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Full Name:"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profileFullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextrectangle"
            android:textColor="#000102"
            android:textSize="20sp"
            android:inputType="textPersonName"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Gender:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/profileGenderId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Date Of Birth:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profileDateOfBirthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextrectangle"
                android:focusable="false"
                android:textColor="#000102"
                android:clickable="true"
                android:inputType="none"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Age:"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profileAgeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10sp"
                android:clickable="true"
                android:background="@drawable/edittextrectangle"
                android:textColor="#000102"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Blood Group:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/profileBloodGrpId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text=" Marital Status:"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/profileMaritalId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Father's Name:"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profileFathersNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextrectangle"
            android:textColor="#000102"
            android:textSize="20sp"
            android:inputType="text"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Permanent Address"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profileAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextrectangle"
            android:textColor="#000102"
            android:textSize="20sp"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Religion"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/profileReligionId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Nationality"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/profileNationalityId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/edittextrectangle"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Phone Number:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/profilePhoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:background="@drawable/edittextrectangle"
            android:textColor="#000102"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"

            >
            <Button
                android:text="Update"
                android:layout_width="145sp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapelogin"
                android:onClick="updateButtonEvent"
                />
            <Button
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/shapesignup"
                android:text="Save"
                android:onClick="saveButtonEvent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"

            >
            <Button
                android:text="Academic Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shapelogin"
                android:onClick="AcademicButtonClick"
                />
        </LinearLayout>

    </LinearLayout>


</ScrollView>